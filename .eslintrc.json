{
	"root": true,
	"plugins": ["prettier"],
	"env": {
		"node": true,
		"es6": true,
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "warn",
		"no-console": "off",
		"camelcase": ["warn", { "allow": ["element_id"] }],
		"no-unused-vars": "warn",
		"no-undef": "warn"
	}
}
