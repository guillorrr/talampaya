{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 100,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"semi": true,
	"singleAttributePerLine": false,
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": "**/*.hbs",
			"options": {
				"parser": "glimmer",
				"singleQuote": false
			}
		},
		{
			"files": "**/*.php",
			"options": {
				"parser": "php",
				"singleQuote": false
			}
        },
        {
            "files": "**/*.twig",
            "options": {
                "twigOutputEndblockName": true,
                "twigPrintWidth": 120,
                "twigSingleQuote": false,
                "twigAlwaysBreakObjects": false,
                "twigMultiTags": [
                    "nav,endnav",
                    "minify,endminify",
                    "switch,case,default,endswitch",
                    "ifchildren,endifchildren",
                    "cache,endcache",
                    "js,endjs",
                    "css,endcss"
                ]
            }
        }
	],
    "plugins": ["@zackad/prettier-plugin-twig", "@prettier/plugin-php"]
}
