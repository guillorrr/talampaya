<div class="block block-hero">
	<a href="{{ post.link }}" class="b-inner">
		<div class="b-thumb">
			{% include "@atoms/images/image.twig" with {
				img: post.thumbnail
					? { src: post.thumbnail.src, alt: post.title, width: "100%" }
					: {}
			} %}
		</div>
		<div class="b-text">
			<h2 class="b-title">{{ post.title }}</h2>
		</div>
	</a>
</div>
