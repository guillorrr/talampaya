<div class="block block-thumb">
	<a href="{{ post.url }}" class="b-inner">
		<div class="b-thumb">
			{% if post.img|first.src %}
				{% include "@atoms/images/image.twig" with {
					img: { src: post.img|first.src, alt: post.img|first.alt|default(post.title) }
				} %}
			{% else %}
				{% include "@atoms/images/square.twig" %}
			{% endif %}
		</div>
		<div class="b-text">
			<h2 class="b-title">{{ post.title }}</h2>
			<p>
				{{ post.excerpt }}
			</p>
		</div>
	</a>
</div>
