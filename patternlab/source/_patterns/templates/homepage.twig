{% extends "@templates/layouts/page-2col.twig" %}
{% block hero %}
	{% if emergency %}
		{% include "@molecules/messaging/alert.twig" with emergency %}
	{% endif %}
	{% if hero %}
		{% include "@molecules/blocks/block-hero.twig" with hero %}
	{% endif %}

	<div class="g g-3up">
		{% for tout in touts %}
			<div class="gi">
				{% include "@molecules/blocks/block-inset.twig" with tout %}
			</div>
		{% endfor %}
	</div>
	<!-- end 3up -->

	<hr />
{% endblock hero %}

{% block main %}
	{% include "@organisms/sections/latest-posts.twig" with posts %}
{% endblock main %}

{% block sidebar %}
	{% include "@organisms/sections/recent-tweets.twig" %}
{% endblock sidebar %}
