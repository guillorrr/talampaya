<!DOCTYPE html>
<html {{ site.language_attributes }}>
	<head>
		<meta charset="{{ site.charset }}" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

		<title>
			{% if wp_title %}
				{{ wp_title }} / {{ site.name }}
			{% else %}
				{{ site.name }}
			{% endif %}
		</title>

		<link rel="author" href="{{ site.theme.link }}/humans.txt" />
		<link rel="pingback" href="{{ site.pingback_url }}" />
		<link rel="profile" href="http://gmpg.org/xfn/11" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="stylesheet"
			href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,700&subset=latin,cyrillic" />

		{% block styles %}

		{% endblock styles %}

		{# {% include 'includes/google-analytics.twig' %} #}
		{# {% include 'includes/facebook-pixel.twig' %} #}

		{% block head %}

		{% endblock head %}

		{% do action("get_header") %}
		{{ function("wp_head") }}
	</head>

	<body id="{{ page.name }}-page" class="{{ body_class }} {{ layout_class }}">
		{{ function("wp_body_open") }}

		{% include "blocks/header.twig" %}

		<main id="content" class="content-wrapper">
			{% if title %}
				<h1>
					{{ title }}
				</h1>
			{% endif %}
			<div class="wrapper">
				{% block content %}
					Sorry, no content
				{% endblock content %}
			</div>
		</main>

		{% block footer %}
			{% include "blocks/footer.twig" %}
		{% endblock footer %}

		{# include 'blocks/video-modal.twig' #}

		{% block modal %}

		{% endblock modal %}

		<script src="https://www.google.com/recaptcha/api.js?render="></script>

		{% block scripts %}

		{% endblock scripts %}

		{{ function("wp_footer") }}

		{% do action("get_footer") %}
	</body>
</html>
