{% extends "layouts/base.twig" %}

{% block content %}
	<h2>
		{{ foo }}
	</h2>
	{% for post in posts %}
		{% include ["blocks/tease-" ~ post.post_type ~ ".twig", "blocks/tease.twig"] %}
	{% endfor %}

	{{ dump() }}

	{% include "components/pagination.twig" with {
		pagination: posts.pagination({
			show_all: false,
			mid_size: 3,
			end_size: 2
		})
	} %}
{% endblock content %}
